# ==============================================================================
# FOLLA Frontend - Production Environment Variables
# ==============================================================================
# Copy to .env and fill in your values
# Only VITE_* variables are exposed to the browser (safe to expose)
#
# LEGEND:
#   游댮 REQUIRED - Build will fail without this
#   游리 RECOMMENDED - Strongly recommended for production
#   游릭 OPTIONAL - Can be omitted
# ==============================================================================

# ========= API Configuration (游댮 REQUIRED) =========
# Backend API URL (HTTPS in production)
VITE_API_URL=https://api.follacouffin.tn

# ========= Paymee (游댮 REQUIRED) =========
# Mode: dynamic = full integration with webhooks
VITE_PAYMEE_MODE=dynamic

# ========= Clerk Authentication (游댮 REQUIRED) =========
# PRODUCTION: Use pk_live_xxx (publishable key is safe to expose)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_xxx

# ========= Analytics (游리 RECOMMENDED) =========
# Google Analytics 4 Measurement ID
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# ========= Observability (游리 RECOMMENDED) =========
# Sentry DSN for frontend error tracking
VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ========= Feature Flags (游릭 OPTIONAL) =========
VITE_ENABLE_ANALYTICS=true

# ========= Site Info (游릭 OPTIONAL) =========
# Used for SEO and JSON-LD
VITE_SITE_URL=https://follacouffin.tn
VITE_SITE_NAME=FollaCouffin
